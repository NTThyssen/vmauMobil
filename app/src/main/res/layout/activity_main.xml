<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1E26"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="#151515"
            app:itemTextColor="@color/nav_ic_color"
            app:itemIconTint="@color/nav_ic_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <ImageView
            android:layout_width="174dp"
            android:layout_height="127dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imgBotLef"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/imgTopLeft"
            android:layout_width="176dp"
            android:layout_height="129dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="212dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
    <ImageView
            android:layout_width="156dp"
            android:layout_height="128dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imgTopRight"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="212dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="158dp"
            android:layout_height="124dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imgBotRight" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

</android.support.constraint.ConstraintLayout>