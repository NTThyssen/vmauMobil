<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1E26"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="225dp"
            android:layout_height="85dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="From Here You Can Perfrom Hearing Test And See Prior Test Results"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/imgTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#151515"
            app:itemIconTint="@color/nav_ic_color"
            app:itemTextColor="@color/nav_ic_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgTop"
            android:layout_width="224dp"
            android:layout_height="236dp"
            android:layout_marginTop="60dp"
            android:clickable="true"
            app:fabCustomSize="231dp"
            app:layout_constraintBottom_toTopOf="@+id/imgBot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message"
            app:maxImageSize="170dp"
            app:srcCompat="@drawable/ic_ear" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgBot"
            android:layout_width="231dp"
            android:layout_height="231dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:textAlignment="center"
            app:fabCustomSize="234dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTop"
            app:maxImageSize="170dp"
            app:srcCompat="@drawable/ic_equalizer"
            app:useCompatPadding="false" />

</androidx.constraintlayout.widget.ConstraintLayout>